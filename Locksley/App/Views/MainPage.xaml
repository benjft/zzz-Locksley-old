<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Locksley.App.ViewModels"
             xmlns:models="clr-namespace:Locksley.App.Data.Models"
             x:Class="Locksley.App.Views.MainPage"
             x:DataType="viewModels:MainViewModel">

    <ListView ItemsSource="{Binding ScoreSheets}">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="models:ScoreSheet">
                <TextCell Text="{Binding Title}"
                          Detail="{Binding DateString}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>